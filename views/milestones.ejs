<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Milestones - Learning Progress Tracker</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <header class="bg-primary text-white text-center py-4">
    <h1>Learning Progress Tracker</h1>
    <nav>
      <a href="/" class="btn btn-light mx-2">Home</a>
      <a href="/milestones" class="btn btn-light mx-2">Milestones</a>
    </nav>
  </header>
  <main class="container mt-5">
    <h2>Milestones</h2>
    <form action="/milestones" method="POST" class="mb-4">
      <input type="text" name="subject" placeholder="Subject" required>
      <input type="text" name="description" placeholder="Description" required>
      <input type="date" name="deadline">
      <button type="submit" class="btn btn-success">Add</button>
    </form>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Subject</th>
          <th>Description</th>
          <th>Deadline</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% milestones.forEach(milestone => { %>
        <tr>
          <td><%= milestone.subject %></td>
          <td><%= milestone.description %></td>
          <td><%= milestone.deadline ? milestone.deadline.toLocaleDateString() : "N/A" %></td>
          <td><%= milestone.status %></td>
          <td>
            <form method="POST" action="/milestones/<%= milestone._id %>?_method=PUT">
              <button class="btn btn-primary">Complete</button>
            </form>
            <form method="POST" action="/milestones/<%= milestone._id %>?_method=DELETE">
              <button class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
  <footer class="text-center bg-dark text-white py-4">
    <p>&copy; 2024 Learning Progress Tracker</p>
  </footer>
</body>
</html>










